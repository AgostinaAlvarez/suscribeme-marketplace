---
import Footer from '../components/Footer.astro';
import FeaturedPackagesCarousel from '../components/FeaturedPackagesCarousel.tsx';
import BestSellersGrid from '../components/BestSellersGrid.tsx';
import FeaturedCustomPackagesCarusel from '../components/FeaturedCustomPackagesCarusel.tsx';
import CuratedCollectionsCarousel from '../components/CuratedCollectionsCarousel.tsx';
import PrincipalHeader from '../components/StructureComponents/PrincipalHeader.tsx';
import IndexCataegorySection from '../components/IndexCataegorySection';
const highlights: {
  imageUrl: string;
  title: string;
  description: string;
  briefDescription: string;
  tagText: string;
}[] = [
  {
    imageUrl: '/assets/flatIcons/box.svg',
    title: 'Suscripciones listas para vos',
    description:
      'Descubrí paquetes de suscripción creados por vendedores, con planes mensuales o anuales según tus necesidades.',
    briefDescription: 'Paquetes de suscripción con planes mensuales o anuales.',
    tagText: 'Ver paquetes',
  },
  {
    imageUrl: '/assets/flatIcons/shopping-cart.svg',
    title: 'Armá tu plan a medida',
    description:
      'Elegí productos, servicios o beneficios y creá tu propia suscripción personalizada desde un solo lugar.',
    briefDescription:
      'Combiná productos y servicios para crear tu suscripción.',
    tagText: 'Crear mi plan',
  },
  {
    imageUrl: '/assets/flatIcons/quality.svg',
    title: 'Vendedores verificados',
    description:
      'Trabajamos con marcas y comercios que cumplen estándares de calidad y servicio.',
    briefDescription: 'Marcas y comercios verificados por la plataforma.',
    tagText: 'Cómo validamos',
  },
  {
    imageUrl: '/assets/flatIcons/credit-card.svg',
    title: 'Pagos simples y recurrentes',
    description:
      'Pagá tu suscripción de forma automática, segura y sin preocupaciones todos los meses.',
    briefDescription: 'Pagos automáticos y seguros todos los meses.',
    tagText: 'Ver medios de pago',
  },
  {
    imageUrl: '/assets/flatIcons/discount-tag.svg',
    title: 'Beneficios por suscribirte',
    description:
      'Accedé a precios especiales, descuentos exclusivos y beneficios solo para suscriptores.',
    briefDescription: 'Descuentos y beneficios exclusivos por suscribirte.',
    tagText: 'Ver beneficios',
  },
  {
    imageUrl: '/assets/flatIcons/coupon.svg',
    title: 'Promos y cupones activos',
    description:
      'Aplicá cupones de descuento en paquetes seleccionados y aprovechá ofertas por tiempo limitado.',
    briefDescription: 'Cupones y promociones disponibles por tiempo limitado.',
    tagText: 'Ver promociones',
  },
  {
    imageUrl: '/assets/flatIcons/transaction.svg',
    title: 'Control total de tu gasto',
    description:
      'Conocé el total mensual de tu suscripción antes de pagar y ajustala cuando quieras.',
    briefDescription: 'Visualizá y ajustá tu gasto mensual fácilmente.',
    tagText: 'Gestionar suscripción',
  },
  {
    imageUrl: '/assets/flatIcons/tracking.svg',
    title: 'Envíos y retiros claros',
    description:
      'Cada paquete indica si el envío es a domicilio o retiro en tienda, con costos y tiempos transparentes.',
    briefDescription: 'Opciones claras de envío a domicilio o retiro.',
    tagText: 'Cómo funciona',
  },
  {
    imageUrl: '/assets/flatIcons/discount.svg',
    title: 'Ahorrá más a largo plazo',
    description:
      'Los planes anuales y las suscripciones combinadas ofrecen mejores precios que las compras individuales.',
    briefDescription: 'Mejores precios con planes anuales o combinados.',
    tagText: 'Comparar planes',
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Suscribeme | Marketplace de Suscripciones Digitales</title>
    <meta
      name="description"
      content="Descubrí y gestioná suscripciones digitales desde un solo lugar. Encontrá planes de café, fitness, educación, entretenimiento y más."
    />
    <link rel="stylesheet" href="/styles/normalize.css" />
    <link rel="stylesheet" href="/styles/globalStyles.css" />
    <link rel="stylesheet" href="/styles/indexStyles.css" />

    <script src="/scripts/slider.js" is:inline></script>
    <script src="/scripts/highlightsSlider.js" is:inline></script>

    <!-- ===== Link Swiper's CSS ===== -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/swiper/swiper-bundle.min.css"
    />
  </head>
  <body>
    <!-- ================= HEADER ================= -->
    <PrincipalHeader client:load />
    <!-- ================= MAIN ================= -->
    <main class="main index-main">
      <h1 class="visually-hidden">
        Marketplace de suscripciones para descubrir, combinar y gestionar planes
        desde un solo lugar
      </h1>
      <!-- ================= HERO SLIDER ================= -->
      <section aria-labelledby="hero-section-title" class="slider">
        <div class="list">
          <!-- SLIDE 1 -->
          <article class="item slide-1">
            <div class="item-content">
              <h2>Gestioná todas tus suscripciones en un solo lugar</h2>
              <p>
                Pagos, envíos, renovaciones y comunicación con vendedores, todo
                desde un dashboard centralizado.
              </p>
              <div>
                <a href="/dashboard">Ver mis suscripciones</a>
              </div>
            </div>
          </article>
          <!-- SLIDE 2 -->
          <article class="item slide-2">
            <div class="item-content">
              <h2>Creá tu suscripción a medida</h2>
              <p>
                Elegí productos, servicios y beneficios para armar una
                suscripción personalizada según tus necesidades.
              </p>
              <div>
                <a href="/packages">Empezar ahora</a>
              </div>
            </div>
          </article>
          <!-- SLIDE 3 -->
          <article class="item slide-3">
            <div class="item-content">
              <h2>Descubrí tu suscripción ideal</h2>
              <p>
                Accedé a miles de planes de suscripción de vendedores
                confiables. Construí tu paquete ideal y gestioná todo desde un
                solo lugar.
              </p>
              <div>
                <a href="/subscriptions">Explorar planes</a>
                <a href="/packages">Crear mi paquete</a>
              </div>
            </div>
          </article>
        </div>

        <div class="header-buttons">
          <button id="prev" class="left-button">&lt;</button>
          <button id="next" class="right-button">&gt;</button>
        </div>

        <ul class="dots">
          <li class="active"></li>
          <li></li>
          <li></li>
        </ul>
      </section>
      <!-- ================= HIGHLIGHTS ================= -->
      <section
        aria-labelledby="highlights-section"
        class="index-section-container index-default-section highlights-section"
      >
        <div class="highlights-slider-container">
          <div class="highlights-slider" id="highlights-slider">
            <div class="highlights-slide highlights-slide-1" data-slide="1">
              {
                highlights.slice(0, 6).map((item) => (
                  <div class="index-highlight-grid-item">
                    <div class="index-highlight-grid-item-header">
                      <h3>{item.title}</h3>
                      <img
                        src={item.imageUrl}
                        alt={item.title}
                        width="73"
                        height="73"
                      />
                    </div>
                    <div class="index-highlight-grid-item-bottom">
                      <p>{item.briefDescription}</p>
                      <div class="index-highlight-grid-item-bottom-tag">
                        <span>{item.tagText}</span>
                      </div>
                    </div>
                  </div>
                ))
              }
            </div>
            <div
              class="highlights-slide highlights-slide-2"
              data-slide="2"
              style="display:none;"
            >
              {
                highlights.slice(6, 9).map((item) => (
                  <div class="index-highlight-grid-item">
                    <div class="index-highlight-grid-item-header">
                      <h3>{item.title}</h3>
                      <img
                        src={item.imageUrl}
                        alt={item.title}
                        width="73"
                        height="73"
                      />
                    </div>
                    <div class="index-highlight-grid-item-bottom">
                      <p>{item.briefDescription}</p>
                      <div class="index-highlight-grid-item-bottom-tag">
                        <span>{item.tagText}</span>
                      </div>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
          <div class="highlights-slider-nav">
            <button
              class="highlights-slider-arrow highlights-slider-arrow-left"
              id="highlights-prev"
              aria-label="Anterior"
              disabled>&lt;</button
            >
            <button
              class="highlights-slider-arrow highlights-slider-arrow-right"
              id="highlights-next"
              aria-label="Siguiente">&gt;</button
            >
          </div>
        </div>
      </section>
      <!-- ================= CATEGORIES ================= -->
      <section
        aria-labelledby="categories-section"
        class="index-section-container index-default-section"
      >
        <div class="index-section-header">
          <h2 id="categories-section" class="main-container-ttl">
            Explorar por categoría
          </h2>
          <a href="/">Explore Categories</a>
        </div>
        <IndexCataegorySection client:load />
      </section>
      <!-- ================= FEATURED STANDAR PACKAGES ================= -->
      <section
        aria-labelledby="featured-standar-packages-section"
        class="index-section-container index-default-section"
      >
        <div class="index-filters-container">
          <div class="index-section-header">
            <h2
              id="featured-standar-packages-section"
              class="main-container-ttl"
            >
              Paquetes Destacados
            </h2>
            <a href="/">View More</a>
          </div>
          <div class="index-tag-filters-container">
            <div class="index-tag-filter">
              <span>All</span>
            </div>
            <div class="index-tag-filter">
              <span>Newest</span>
            </div>
            <div class="index-tag-filter">
              <span>Best</span>
            </div>
          </div>
        </div>
        <FeaturedPackagesCarousel client:load />
      </section>
      <!-- ================= BANNERS SECTION ================= -->
      <section
        aria-labelledby="banners-section"
        class="index-section-container index-default-section"
      >
        <div class="banners-section">
          <article class="banners-section-left-col">
            <!--
              <img
                src="https://mockuptree.com/wp-content/uploads/edd/2018/03/Tuck-Lid-Window-Box-Packaging-Mockup.jpg"
                class="banners-section-left-col-img"
              />
             -->
            <img
              src="https://mockuptree.com/wp-content/uploads/edd/2021/01/Free-Moving-Box-Mockup-e1612211641852.jpg"
              class="banners-section-img"
            />
            <div class="banners-section-left-col-layer">
              <h2>Freshness Begins with Quality Vegetables</h2>
              <a href="/">Shop Now</a>
            </div>
          </article>
          <div class="banners-section-right-col">
            <article class="banners-section-right-col-card">
              {
                /*
                src="https://mockuptree.com/wp-content/uploads/edd/2025/06/Free_Book_Mockup_psd.jpg"
                src="https://mockuptree.com/wp-content/uploads/edd/2020/07/free-Book-Mockup.jpg"
                src="https://mockuptree.com/wp-content/uploads/edd/2018/02/psd-a5-hardcover-book.jpg"
                src="https://mockuptree.com/wp-content/uploads/edd/2018/04/paperback-psd-book-mockup.jpg"
                src="https://mockuptree.com/wp-content/uploads/edd/2025/09/hard-cover-book-mockup-3.jpg"
                src="https://mockuptree.com/wp-content/uploads/edd/2025/07/book-mockups-.jpg"
                src="https://mockuptree.com/wp-content/uploads/edd/2022/07/Free-Book-Mockups-PSD.jpg"
                src="https://mockuptree.com/wp-content/uploads/edd/2021/08/free-book-psd-mockup.jpg"
                src="https://mockuptree.com/wp-content/uploads/edd/2023/04/Two-Hardcover-Books-Mockup.jpg"
                src="https://mockuptree.com/wp-content/uploads/edd/2022/06/notebook-set-psd-scene-mockup.jpg"
                
                */
              }
              <img
                src="https://mockuptree.com/wp-content/uploads/edd/2025/04/Spiral_Book_Mockup.jpg"
                class="banners-section-img"
              />
              <div
                class="banners-section-right-col-card-layout banners-section-right-col-first-card-layout"
              >
                <h2>Your favorite phone at Crazy Offers</h2>
              </div>
            </article>
            <article class="banners-section-right-col-card">
              {
                /*
                src="https://mockuptree.com/wp-content/uploads/edd/2021/08/free-book-psd-mockup.jpg"
                */
              }
              <img
                src="https://mockuptree.com/wp-content/uploads/edd/2025/02/A4_Flyer_Mockup.jpg"
                class="banners-section-img"
              />
              <div
                class="banners-section-right-col-card-layout banners-section-right-col-second-card-layout"
              >
                <h2>Trendy Styles Flat 30% Off</h2>
              </div>
            </article>

            <!---
            <article
              class="banners-section-right-col-card banners-section-right-col-card-first"
            >
              <div class="banners-section-right-col-card-content">
                <h2>Your favorite phone at Crazy Offers</h2>
                <a href="/">Shop Now</a>
              </div>
            </article>
            <article class="banners-section-right-col-card">
              <div class="banners-section-right-col-card-content">
                <h2>Trendy Styles Flat 30% Off</h2>
                <a href="/">Shop Now</a>
              </div>
            </article>
            
            -->
          </div>
        </div>
      </section>
      <!-- ================= SELLERS ================= -->
      <section
        aria-labelledby="sellers-section"
        class="index-section-container index-default-section"
      >
        <div class="index-section-header">
          <h2 id="sellers-section" class="main-container-ttl">
            Paquetes Destacados
          </h2>
          <a href="/">View More</a>
        </div>
        <BestSellersGrid client:load />
      </section>
      <!-- ================= CUSTOM PACKAGES INFO ================= -->
      <section
        aria-labelledby="sellers-section"
        class="index-section-container index-default-section"
      >
        <div class="custom-packages-info-section-grid">
          <div class="custom-packages-info-section-left-col">
            <h2 id="custom-packages-info">Build Your Custom Package</h2>
            <p>
              Mix and match subscriptions from different sellers and save up to
              40% on bundled plans
            </p>
            <ul class="custom-packages-info-section-list">
              <li>
                <article>
                  <h3 class="custom-packages-info-section-check-ttl">
                    Choose from 10,000+ subscription options
                  </h3>
                </article>
              </li>
              <li>
                <article>
                  <h3 class="custom-packages-info-section-check-ttl">
                    Automatic bundle discounts applied
                  </h3>
                </article>
              </li>
              <li>
                <article>
                  <h3 class="custom-packages-info-section-check-ttl">
                    Single monthly payment for all subscriptions
                  </h3>
                </article>
              </li>
              <li>
                <article>
                  <h3 class="custom-packages-info-section-check-ttl">
                    Cancel or modify anytime
                  </h3>
                </article>
              </li>
            </ul>
            <a href="/">View More Information</a>
          </div>

          <div class="custom-packages-info-section-right-col">
            <div class="container">
              <div class="cube-1">
                <div class="isometric-cube-top"></div>
                <div class="isometric-cube-right"></div>
                <div class="isometric-cube-left"></div>
              </div>
              <div class="cube-2">
                <div class="isometric-cube-top"></div>
                <div class="isometric-cube-right"></div>
                <div class="isometric-cube-left"></div>
              </div>
              <div class="cube-3">
                <div class="isometric-cube-top"></div>
                <div class="isometric-cube-right"></div>
                <div class="isometric-cube-left"></div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- ================= FEATURED CUSTOM PACKAGE ================= -->
      <section
        aria-labelledby="featured-custom-packages-section"
        class="index-section-container index-default-section"
      >
        <div class="index-filters-container">
          <div class="index-section-header">
            <h2
              id="featured-custom-packages-section"
              class="main-container-ttl"
            >
              Paquetes Personalizados Destacados
            </h2>
            <a href="/">View More</a>
          </div>
          <div class="index-tag-filters-container">
            <div class="index-tag-filter">
              <span>All</span>
            </div>
            <div class="index-tag-filter">
              <span>Newest</span>
            </div>
            <div class="index-tag-filter">
              <span>Best</span>
            </div>
          </div>
        </div>
        <FeaturedCustomPackagesCarusel client:load />
      </section>
      <!-- ================= CURATED COLLECTIONS ================= -->
      <section
        aria-labelledby="curated-collections-section"
        class="index-section-container index-default-section"
      >
        <div class="index-section-header">
          <h2 id="curated-collections-section" class="main-container-ttl">
            Curated Collections
          </h2>
          <a href="/">Explore Categories</a>
        </div>
        <CuratedCollectionsCarousel client:load />
      </section>

      <!-- ================= PLATFORM PROPS ================= -->
      <section
        aria-labelledby="features-section"
        class="index-section-container index-default-section"
      >
        <div class="index-section-header">
          <h2 id="features-section" class="main-container-ttl">
            Why Shop With Us?
          </h2>
          <a href="/">Explore Categories</a>
        </div>
        <div class="platform-features-grid">
          <article class="platform-features-card platform-features-card-1">
            <div>Ic</div>
            <div class="platform-features-card-info-container">
              <h3>Active Users</h3>
              <p>
                Join thousands of active users discovering trending products,
                fresh deals, and a vibrant shopping experience every day.
              </p>
            </div>
          </article>
          <article class="platform-features-card platform-features-card-2">
            <div>Ic</div>
            <div class="platform-features-card-info-container">
              <h3>Product Sold</h3>
              <p>
                With over 50,000 products sold, we're proud to be the trusted
                choice for shoppers seeking quality, and value.
              </p>
            </div>
          </article>
          <article class="platform-features-card platform-features-card-3">
            <div>Ic</div>
            <div class="platform-features-card-info-container">
              <h3>Trusted Partner</h3>
              <p>
                Collaborating with leading global and local brands you know and
                trust.
              </p>
            </div>
          </article>
          <article class="platform-features-card platform-features-card-4">
            <div>Ic</div>
            <div class="platform-features-card-info-container">
              <h3>Happy Customer</h3>
              <p>
                Delighting customers every day with quality, value, and service.
              </p>
            </div>
          </article>
          <article class="platform-features-card platform-features-card-5">
            <div>Ic</div>
            <div class="platform-features-card-info-container">
              <h3>Secure Payment</h3>
              <p>Shop confidently with secure, encrypted payment options.</p>
            </div>
          </article>
        </div>
      </section>

      <!-- ================= TESTIMONIALS ================= -->
      <!--
		<section aria-labelledby="testimonials-title">
		  <h2 id="testimonials-title">Qué dicen nuestros usuarios</h2>
  
		  <article>
			<p>
			  “Suscribeme me permitió gestionar todas mis suscripciones desde un
			  solo lugar y ahorrar dinero.”
