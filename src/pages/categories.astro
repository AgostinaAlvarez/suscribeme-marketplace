---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CategoriesScreenHeader from '../components/StructureComponents/CategoriesScreenHeader';
import CategoriesScreen from '../componentsPages/CategoriesScreen.tsx';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Suscribeme | Marketplace de Suscripciones Digitales</title>
    <meta
      name="description"
      content="Descubrí y gestioná suscripciones digitales desde un solo lugar. Encontrá planes de café, fitness, educación, entretenimiento y más."
    />
    <link rel="stylesheet" href="/styles/normalize.css" />
    <link rel="stylesheet" href="/styles/globalStyles.css" />
    <link rel="stylesheet" href="/styles/categoriesScreenStyles.css" />
  </head>
  <body class="categories-body">
    <!-- ================= HEADER ================= -->
    <CategoriesScreenHeader client:load />
    <!-- ================= MAIN ================= -->
    <main class="main categories-main">
      <CategoriesScreen client:load />
    </main>
    <!-- ================= FOOTER ================= -->
    <Footer />
  </body>
</html>
